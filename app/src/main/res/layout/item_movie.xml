<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="14dp"
    android:layout_marginTop="14dp"
    android:background="@android:color/white">

    <RelativeLayout xmlns:tool="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white">

        <ImageView
            android:id="@+id/ivPoster"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:contentDescription="@string/image"
            android:scaleType="fitXY"
            android:src="@drawable/no_image" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="2dp"
            android:layout_toEndOf="@id/ivPoster"
            android:text="@string/nameMovie"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvPopuler"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvTitle"
            android:layout_alignStart="@+id/tvTitle"
            android:visibility="invisible"
            android:paddingTop="4dp"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            tool:text="20 Maret 1998" />

        <TextView
            android:id="@+id/tvOverview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvPopuler"
            android:layout_alignStart="@+id/tvPopuler"
            android:layout_marginStart="0dp"
            android:layout_marginTop="6dp"
            android:maxLines="4"
            android:paddingStart="0dp"
            android:paddingEnd="16dp"
            android:text="@string/tidak_ada_deskripsi"/>

    </RelativeLayout>
</androidx.cardview.widget.CardView>
